# ReplicantX Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# =============================================================================
# LLM API Keys (PydanticAI automatically detects these)
# =============================================================================

# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key  
# Get from: https://console.anthropic.com/account/keys
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google AI API Key
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-ai-api-key-here

# Groq API Key
# Get from: https://console.groq.com/keys
GROQ_API_KEY=your-groq-api-key-here

# =============================================================================
# Supabase Configuration
# =============================================================================

# Supabase Project URL
# Found in your Supabase dashboard: Settings > API
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anon Key (public key, safe to use in client-side code)
# Found in your Supabase dashboard: Settings > API
SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Supabase Service Role Key (private key, use with caution)
# Found in your Supabase dashboard: Settings > API
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# =============================================================================
# ReplicantX Target URLs
# =============================================================================

# Main target API for testing
REPLICANTX_TARGET=your-api-domain.com

# Staging environment
REPLICANTX_STAGING_TARGET=staging-api.your-domain.com

# Production environment (use with caution!)
REPLICANTX_PROD_TARGET=prod-api.your-domain.com

# Local development
REPLICANTX_LOCAL_TARGET=localhost:8000

# =============================================================================
# JWT Authentication
# =============================================================================

# JWT tokens for different environments
JWT_TOKEN=your-jwt-token-here
JWT_STAGING_TOKEN=your-staging-jwt-token-here
JWT_PROD_TOKEN=your-production-jwt-token-here

# =============================================================================
# Custom API Keys & Tokens
# =============================================================================

# Your custom API keys for testing
MY_API_KEY=your-custom-api-key-here
MY_API_SECRET=your-custom-api-secret-here

# Authentication tokens for your services
MY_AUTH_TOKEN=your-auth-token-here
MY_BEARER_TOKEN=your-bearer-token-here

# =============================================================================
# Test Configuration
# =============================================================================

# Test user credentials
TEST_USER_NAME=Test User
TEST_USER_EMAIL=test@example.com
TEST_USER_PHONE=+1-555-0123

# Test API endpoints
TEST_API_BASE_URL=https://api.example.com
TEST_WEBHOOK_URL=https://webhook.example.com

# =============================================================================
# Development Settings
# =============================================================================

# Debug mode
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable verbose output
VERBOSE=true

# =============================================================================
# GitHub Actions / CI Configuration
# =============================================================================

# These are typically set in GitHub Secrets, but you can test locally
GITHUB_TOKEN=your-github-token-here
RENDER_API_KEY=your-render-api-key-here

# =============================================================================
# Additional Provider APIs (Optional)
# =============================================================================

# Ollama (for local LLM deployment)
OLLAMA_BASE_URL=http://localhost:11434

# Azure OpenAI
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# Cohere
COHERE_API_KEY=your-cohere-api-key

# Hugging Face
HUGGING_FACE_API_KEY=your-hugging-face-api-key

# =============================================================================
# Security Notes
# =============================================================================

# 1. NEVER commit this file to version control
# 2. Use different keys for development/staging/production
# 3. Rotate keys regularly
# 4. Use minimum required permissions
# 5. Consider using a secrets management service for production